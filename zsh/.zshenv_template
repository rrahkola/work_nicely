###
# .zshenv     -- search path, common env variables
###

# NodeJS environment manager -- `brew install nvm`
export NVM_DIR="/Users/RRahk1/nikedev/Packages/nvm"
export NVM_AUTOLOAD=1

# PyEnv bindings -- `brew install pyenv`
export PYENV_ROOT="/Users/RRahk1/nikedev/Packages/pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

# Groovy -- `brew install groovysdk`
export GROOVY_HOME=/usr/local/opt/groovy/libexec

# Java environment switcher
export PATH="$HOME/.jenv/bin:$PATH"

# Zsh options
DIRSTACKSIZE=8
export ZDOTDIR="<<ZDOTDIR>>"
